<div class="navbar navbar-light bg-light sticky-top">
    <div class="navbar-text">Filters</div>
    <div class="dropdown">
        <button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fa fa-sort"></i> Sort
        </button>
        <div class="dropdown-menu">
            {% for identifier, label in criteria.sortOptions %}
                <a class="dropdown-item" href="{{ path('homepage', { filter: criteria.getQuery({'sortOrder': identifier})}) }}">
                    {{ label }}
                    <div class="pull-right">
                        <i class="fa {{ criteria.sortOrder == identifier ? "fa-check-square-o" : "fa-square-o" }}"></i>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>

    <div class="dropdown">
        <button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fa fa-filter"></i> Filter
        </button>
        <div class="dropdown-menu">
            {% if criteria.query|length > 0 %}
                <a  class="dropdown-item" href="{{ path('homepage', { filter: criteria.getQuery({'query': null})}) }}" title="remove filter">
                    <div class="pull-right">
                        <i class="fa fa-times-circle"></i>
                    </div>
                    fulltext "{{ criteria.query }}"
                </a>
            {% endif %}
            <a class="dropdown-item" href="{{ path('homepage', {'filter': criteria.query({'pendingOnly': not criteria.pendingOnly}) }) }}">
                only show pending
                <div class="pull-right">
                    <i class="fa {{ criteria.pendingOnly ? "fa-check-square-o" : "fa-square-o" }}"></i>
                </div>
            </a>
        </div>
    </div>

    {% include "OlryMentalNoteBundle:Default:sidebar-categories.html.twig" with {criteria: criteria, categories: categories} %}
    {% include "OlryMentalNoteBundle:Default:sidebar-tags.html.twig" with {criteria: criteria, tags: tags} %}
</div>
