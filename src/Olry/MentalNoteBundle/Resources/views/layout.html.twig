<!DOCTYPE html>
<html lang="en">
    <head>
        <title>{%block title%}Smarter Bookmarks{%endblock%}:: MentalNote</title>

        <meta charset="utf-8">
        <meta name="description" content="">
        <meta name="author" content="">

        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <script type="text/javascript">
            var mentalNote = {
                route: {
                    url_metainfo: '{{ path('url_metainfo') }}',
                    tag_search: '{{ path('tag_search') }}'
                }
            }
        </script>

        <link rel="stylesheet" href="{{ asset('css/all.min.css') }}" />
    </head>

    <body>

        <div class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">

                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('homepage') }}"> <i class="fa fa-bookmark"></i> MentalNote</a>
                </div>

                <div class="collapse navbar-collapse">

                    <ul class="nav navbar-nav">
                        <li>
                            <button type="button" href="{{ path('entry_create') }}" id="add-url" class="modal-ajax-form btn btn-default navbar-btn"><i class="fa fa-plus"></i> add link...</a>
                        </li>
                    </ul>

                    <div class="nav navbar-right">

                        <ul class="nav navbar-nav navbar-right">
                            <li class="dropdown">
                                <a href="javascript://" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> profile <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="{{ path('user_change_password') }}"><i class="fa fa-key"></i> change password</a></li>
                                </ul>
                            </li>
                            <li>
                                <a href="{{ path('logout') }}" title="logout"><i class="fa fa-off"></i> logout</a>
                            </li>
                        </ul>

                        <form class="navbar-form navbar-right" role="form" action="{{ path('homepage') }}">
                            <div class="form-group">
                                <input type="text" class="form-control" name="filter[query]" placeholder="Search" focus="focus" />
                                <input type="hidden" name="filter[pendingOnly]" value="0" />
                            </div>
                        </form>
                    </div>

                </div><!--/.nav-collapse -->
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    {% block breadcrumb %}{% endblock %}
                </div>
            </div>

            <div class="row">
                <div class="col-sm-3 hidden-xs">
                    {% block sidebar %}{% endblock %}
                </div>

                <div class="col-sm-9 col-xs-12">
                    {% block content %}{% endblock %}
                </div>
            </div>

        </div>

        {% include 'OlryMentalNoteBundle::_footer.html.twig' %}

        <script type="text/javascript">
            {% block additional_javascript %}{% endblock %}

            var scriptsToLoad = [];
            scriptsToLoad.push("{{ asset('js/all.min.js') }}");

            function loadJsDeferred() {
                scriptsToLoad.forEach(function(jsFile) {
                    var element = document.createElement("script");
                    element.src = jsFile;
                    document.body.appendChild(element);
                });
            }

            if (window.addEventListener) {
                window.addEventListener("load", loadJsDeferred, false);
            } else if (window.attachEvent) {
                window.attachEvent("onload", loadJsDeferred);
            } else {
                window.onload = loadJsDeferred;
            }

        </script>

    </body>
</html>
