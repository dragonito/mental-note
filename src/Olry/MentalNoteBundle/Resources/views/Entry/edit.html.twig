            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">editing entry [{{ entry.id }}]</h4>
            </div>
            <div class="modal-body">
                {{ form_widget(form) }}
            </div>
            <div class="modal-footer">
                <button type="submit" namme="submit" class="btn btn-primary"><i class="icon-plus"></i> save</button>
            </div>
        </form>
    </div>
</div>

