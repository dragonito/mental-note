{% extends "OlryMentalNoteBundle::layout.html.twig" %}

{% block content %}
    {{ form_start(form, {attr: {role: "form", style: "margin:0;", id: "entry_form", "data-edit-id": entry.id}, method: "post", action: path('entry_edit', {id: entry.id, backlink: backlink})}) }}
    <div class="row justify-content-center pb-4">
        <div class="col-12 col-lg-8 col-xl-6">
            <div class="card">
                <div class="card-body">
                    <fieldset>
                        <legend>editing entry [{{ entry.id }}]</legend>
                        {% include 'OlryMentalNoteBundle:Entry:_form.html.twig' %}
                    </fieldset>
                </div>
                <div class="card-footer justify-content-end">
                    <span id="metainfo-notification"></span>
                    <button type="submit" name="submit" class="btn btn-primary"><i class="fa fa-plus"></i> save</button>
                </div>
            </div>
        </div>
    </div>
    {{ form_rest(form) }}
{% endblock %}
