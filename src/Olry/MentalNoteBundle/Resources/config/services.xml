<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="olry_mental_note.thumbnail_filepattern">thumbnails/{name}_{width}x{height}.png</parameter>
        <parameter key="olry_mental_note.thumbnail_service.class">Olry\MentalNoteBundle\Thumbnail\ThumbnailService</parameter>
    </parameters>

    <services>
        <service id="olry_mental_note.thumbnail_service" class="%olry_mental_note.thumbnail_service.class%">
            <argument>%kernel.root_dir%/../web</argument>
            <argument>%kernel.cache_dir%/thumbnails</argument>
            <argument>%olry_mental_note.thumbnail_filepattern%</argument>
        </service>
        <service id="olry_mental_note.twig_extension" class="Olry\MentalNoteBundle\Twig\MentalNoteTwigExtension">
            <tag name="twig.extension" />
        </service>
        <service id="form.typ_extension.data_list" class="Olry\MentalNoteBundle\Form\Extension\DataListExtension">
            <tag name="form.type_extension" alias="text"/>
        </service>
    </services>
</container>
